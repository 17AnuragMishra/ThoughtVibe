<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layouts/head', { title: "New Blog | ThoughtVibe" }) %>
    
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> -->
    <link rel="https://gonts.googleapis.com/css2?family=Roboto+Mono&display=swap " rel="stylesheet">

    <script src="/js/script.js" defer></script>

    <script src="/js/create_blog.js" type="module"></script>
</head>
<body>

    <!-- TOP APP BAR -->

    <%- include('../partials/top_app_bar')%>


    <main class="main">

        <article class="page create-blog-page">
            <div class="container">
                <h2 class="page-title text-on-surface handline-small">
                    Create blog
                </h2>

                <form class="blog-write-form" data-form>
                    <div class="image-field-wrapper">
                        <label for="banner" class="btn filled-tonal">
                            <input type="file" name="banner" accept="image/*" id="banner" data-image-field>
                            <span class="material-symbols-outlined">
                                cloud_upload
                            </span>
                            <p class="label-large">Upload image</p>                            

                            <div class="state-layer"></div>
                        </label>

                         <p class="text label-large text-on-surface-varient">
                            Use a ratio of 21:9 for best results. <br>
                            Only JPEG and PNG with max Size of 5MB 
                         </p>

                         <div class="image-preview img-cover" data-image-preview></div>

                         <button type="button" class="icon-btn filled-tonal" data-image-preview-clear>
                            <span class="material-symbols-outlined">
                                delete
                            </span>

                            <div class="state-layer"></div>
                         </button>
                    </div>

                    <input type="text" name="title" id="" aria-label="Blog title" placeholder="Artical Title... " required class="title-field headline-large">

                    <textarea name="content" aria-label="Blog content" placeholder="Write your post content here.." required class="textarea body-large" data-textarea-auto-height></textarea>

                    <div class="footer-actions">
                        <button class="btn btn-fill" data-publish-btn>
                            <p class="label-large">Pubish</p>
                            <div class="state-layer"></div>
                        </button>
                    </div>
                </form> 

            </div>

        </article>
    </main>


    <!-- Footer -->

    <%- include('../layouts/footer')%>


    <!--Snackbar-->

    <div class="snackbar-wrapper" data-snackbar-wrapper></div>


</body>
</html>